{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RegisterPartnership",
  "type": "object",
  "required": ["company_id", "pack_id", "language"],
  "properties": {
    "company_id": {
      "type": "string",
      "format": "uuid"
    },
    "pack_id": {
      "type": "string",
      "format": "uuid"
    },
    "option_selections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PartnershipOptionSelection"
      }
    },
    "contact_name": {
      "type": "string",
      "description": "Partner contact person's full name",
      "minLength": 1,
      "maxLength": 255,
      "examples": ["John Doe", "Marie Curie"]
    },
    "contact_role": {
      "type": "string",
      "description": "Partner contact person's role or title",
      "minLength": 1,
      "maxLength": 255,
      "examples": ["Developer Relations", "Marketing Director", "CEO"]
    },
    "language": {
      "type": "string",
      "description": "Preferred communication language using ISO 639-1 codes",
      "minLength": 2,
      "maxLength": 2,
      "examples": ["en", "fr"]
    },
    "phone": {
      "type": ["string", "null"],
      "description": "Contact phone number in free-form text (1-30 characters)",
      "minLength": 1,
      "maxLength": 30,
      "examples": ["+33123456789", "+1-555-0123", "0612345678"]
    },
    "emails": {
      "type": "array",
      "description": "List of contact email addresses",
      "items": {
        "type": "string",
        "format": "email",
        "examples": ["contact@example.com", "partner@company.org"]
      },
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "definitions": {
    "PartnershipOptionSelection": {
      "type": "object",
      "required": ["type", "option_id"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text_selection", "quantitative_selection", "number_selection", "selectable_selection"]
        },
        "option_id": {
          "type": "string",
          "format": "uuid"
        },
        "selected_quantity": {
          "type": "integer",
          "minimum": 0,
          "description": "Required for quantitative_selection, 0 means exclude option"
        },
        "selected_value_id": {
          "type": "string",
          "format": "uuid",
          "description": "Required for selectable_selection"
        }
      }
    }
  }
}