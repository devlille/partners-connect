{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RegisterPartnership",
  "type": "object",
  "required": ["company_id", "pack_id", "contact_name", "contact_role", "language"],
  "properties": {
    "company_id": {
      "type": "string",
      "format": "uuid"
    },
    "pack_id": {
      "type": "string",
      "format": "uuid"
    },
    "option_selections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PartnershipOptionSelection"
      }
    },
    "contact_name": {
      "type": "string"
    },
    "contact_role": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "phone": {
      "type": ["string", "null"]
    },
    "emails": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email"
      }
    }
  },
  "definitions": {
    "PartnershipOptionSelection": {
      "type": "object",
      "required": ["type", "option_id"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text_selection", "quantitative_selection", "number_selection", "selectable_selection"]
        },
        "option_id": {
          "type": "string",
          "format": "uuid"
        },
        "selected_quantity": {
          "type": "integer",
          "minimum": 0,
          "description": "Required for quantitative_selection, 0 means exclude option"
        },
        "selected_value_id": {
          "type": "string",
          "format": "uuid",
          "description": "Required for selectable_selection"
        }
      }
    }
  }
}