{
  "$id": "company.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "head_office": {
      "anyOf": [
        {
          "$ref": "address.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "siret": {
      "type": [
        "string",
        "null"
      ]
    },
    "vat": {
      "type": [
        "string",
        "null"
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "site_url": {
      "type": [
        "string",
        "null"
      ]
    },
    "medias": {
      "anyOf": [
        {
          "$ref": "media.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "socials": {
      "type": "array",
      "items": {
        "$ref": "social.schema.json"
      }
    }
  },
  "required": [
    "id",
    "name",
    "socials"
  ]
}