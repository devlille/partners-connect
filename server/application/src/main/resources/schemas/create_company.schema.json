{
  "$id": "create_company.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "head_office": {
      "$ref": "address.schema.json"
    },
    "siret": {
      "type": "string",
      "pattern": "^\\d{14}$"
    },
    "vat": {
      "type": "string",
      "pattern": "^[A-Z]{2}[0-9A-Z]+$"
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "site_url": {
      "type": "string"
    },
    "socials": {
      "type": "array",
      "items": {
        "$ref": "social.schema.json"
      }
    }
  },
  "required": [
    "name",
    "head_office",
    "siret",
    "vat",
    "site_url"
  ]
}