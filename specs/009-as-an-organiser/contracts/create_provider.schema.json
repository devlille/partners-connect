{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "create_provider.schema.json",
  "title": "Create Provider Request",
  "description": "Schema for creating a new provider within an organisation",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Provider name"
    },
    "type": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Provider type (free text)"
    },
    "website": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Provider website URL"
    },
    "phone": {
      "type": ["string", "null"],
      "maxLength": 30,
      "description": "Provider phone number"
    },
    "email": {
      "type": ["string", "null"],
      "format": "email",
      "maxLength": 255,
      "description": "Provider email address"
    }
  },
  "required": ["name", "type"],
  "additionalProperties": false
}